@model dynamic
@{
    var id = Model.GetType().GetProperty("id").GetValue(Model, null);
    var isAction = Model.GetType().GetProperty("action");
    var isPermission = Model.GetType().GetProperty("permission");

    if (isPermission == null)
    {
        if (TempData.ContainsKey("isEdit") && (bool)TempData["isEdit"])
        {
            if (isAction == null)
            {
                <a title="Sửa" class="btn bg-gradient-success btn-xs btn-s-m mt-1 mb-1" asp-action="Edit" asp-route-id="@id"><i class="fa fa-pencil" aria-hidden="true"></i><span class="d-lg-inline-block d-md-inline-block d-none">&nbsp;Sửa</span></a>
            }
            else
            {
                var actionController = Model.GetType().GetProperty("action").GetValue(Model, null);
                <a title="Sửa" class="btn bg-gradient-success btn-xs btn-s-m mt-1 mb-1" asp-action="@actionController" asp-route-id="@id"><i class="fa fa-pencil" aria-hidden="true"></i><span class="d-lg-inline-block d-md-inline-block d-none">&nbsp;Sửa</span></a>
            }
        }
    }
    else
    {
        bool isEdit = Model.GetType().GetProperty("permission").GetValue(Model, null);
        if (isEdit)
        {
            if (isAction == null)
            {
                <a title="Sửa" class="btn bg-gradient-success btn-xs btn-s-m mt-1 mb-1" asp-action="Edit" asp-route-id="@id"><i class="fa fa-pencil" aria-hidden="true"></i><span class="d-lg-inline-block d-md-inline-block d-none">&nbsp;Sửa</span></a>
            }
            else
            {
                var actionController = Model.GetType().GetProperty("action").GetValue(Model, null);
                <a title="Sửa" class="btn bg-gradient-success btn-xs btn-s-m mt-1 mb-1" asp-action="@actionController" asp-route-id="@id"><i class="fa fa-pencil" aria-hidden="true"></i><span class="d-lg-inline-block d-md-inline-block d-none">&nbsp;Sửa</span></a>
            }
        }
    }
}