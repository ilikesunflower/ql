@using CMS_Lib.Util

<div class="mt-3 pb-2 d-flex box-sidebar-showed">
    <div class="box-profile">
        <div class="text-center">
            @if (!string.IsNullOrEmpty(User.Claims.FirstOrDefault(x => x.Type == CmsClaimType.Avatar)?.Value))
            {
            <img src="@User.Claims.FirstOrDefault(x => x.Type == CmsClaimType.Avatar)?.Value" class="profile-user-img img-fluid img-circle" alt="User Image">
            }
            else
            {
            <img src="~/images/user-default.png" class="profile-user-img img-fluid img-circle" alt="User Image">
            }
             <img src="~/images/user-circle-active.png" style="position: absolute; margin: 75px 0px 0px -25px; width: 12px;">
        </div>
        <h5 class="profile-username text-center">
            <a asp-area="Admin" asp-controller="Personal" asp-action="Details" class="d-block font-bold" style="font-size: 0.95rem !important;color: #19274B;">@Html.Raw(User.Identity?.Name)</a>
        </h5>
    </div>
</div>

<div class="user-panel mt-3 pb-2 d-flex box-sidebar-collapsed">
    <div class="image">
        @if (!string.IsNullOrEmpty(User.Claims.FirstOrDefault(x => x.Type == CmsClaimType.Avatar)?.Value))
        {
            <img src="@User.Claims.FirstOrDefault(x => x.Type == CmsClaimType.Avatar)?.Value" class="img-circle elevation-2" alt="User Image">
        }
        else
        {
            <img src="~/images/user-default.png" class="img-circle elevation-2 profile-user-img-small" alt="User Image">
        }
        <img src="~/images/user-circle-active.png" style="position: absolute !important; width: 10px !important; height: 10px !important;margin: 24px 0px 0px -10px !important;">
    </div>
</div>
