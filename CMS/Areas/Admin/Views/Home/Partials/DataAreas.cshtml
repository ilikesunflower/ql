@using CMS.Extensions.HtmlTag

@{
    if (Model.GetType().GetProperty("permission") != null )
    {
        var isShow = Model.GetType().GetProperty("permission").GetValue(Model, null);
        if (isShow == true)
        {
            <div class="row">
                <div class="col-12">
                    <div id="area-app"></div>
                </div>
            </div>
            @using (Html.BeginScripts())
            {
                <script type="text/javascript" src="~/dist/js/dashboard/area/bundle.js" asp-append-version="true"></script>
            }   
        }
    }
}


