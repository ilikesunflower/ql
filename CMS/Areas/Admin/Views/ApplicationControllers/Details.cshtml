@model CMS_EF.Models.Identity.ApplicationController
@using Castle.Core.Internal
@using CMS_Lib.Util
@{
    ViewData["Title"] = "Xem chi tiết Controller | Quản lý Controller";
    string namePage = "Xem chi tiết Controller";
    string subName = "Quản lý hệ thống";
    string subName1 = "Quản lý Controller";
    string controller = ViewContext.RouteData.Values["Controller"]?.ToString()?.ToUpper() + "CONTROLLER";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@namePage</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a>@subName</a>
                    </li>
                    <li class="breadcrumb-item active">
                        <a class="active" asp-area="Admin" asp-action="Index">@subName1</a>
                    </li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                            <div class="card-header">
                                @await Html.PartialAsync("Partial/BasicAction/Edit", new {id = Model.Id})
                            </div>
                            <div class="card-body">
                                <div class="form-horizontal">
                                    <div class="form-group row">
                                        <label class="col-sm-2">Tên hiển thị :</label>
                                        <div class="col-sm-10">
                                            <span>
                                                @Html.DisplayFor(model => model.Title)
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2">Tên Controller :</label>
                                        <div class="col-sm-10">
                                            <span>
                                                @Html.DisplayFor(model => model.Name)
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2">Mô tả :</label>
                                        <div class="col-sm-10">
                                            <span>
                                                @Html.Raw(Model.Description.IsNullOrEmpty() ? "" : Model.Description.Replace(Environment.NewLine, "<br/>"))
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
}