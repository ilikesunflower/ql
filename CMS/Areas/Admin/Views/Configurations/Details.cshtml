@using Castle.Core.Internal
@model CMS_EF.Models.Configuration

@{
    ViewData["Title"] = "Xem chi tiết thông tin cấu hình | Quản lý hệ thống";
    string namePage = "Xem chi tiết thông tin cấu hình";
    string subName1 = "Danh sách cấu hình";
    string subName = "Quản lý danh mục";
}

<section class="content-header">
    <div class="container-fluid subname">
        <div class="row">
            <div class="col-sm-6 ">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item">
                        <a>@subName</a>
                    </li>
                    <li class="breadcrumb-item active"><a class="active" asp-area="Admin" asp-action="Index">@subName1</a></li>

                </ol>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header ">
                        <p class="card-title namePageText">@namePage</p>
                        <div class="float-right">
                            @await Html.PartialAsync("Partial/BasicAction/Edit", new { id = Model.Id })
                            @await Html.PartialAsync("Partial/BasicAction/Delete", new { id = Model.Id })
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-horizontal">
                            <div class="form-group row">
                                <label class="col-sm-2 control-label">Tên:</label>
                                <div class="col-sm-10">
                                    <span class="control-label font-normal">@Html.DisplayFor(model => model.Name)</span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 control-label">Giá trị:</label>
                                <div class="col-sm-10">
                                    <span class="control-label font-normal">@Html.DisplayFor(model => model.Val)</span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 control-label">Nội dung:</label>
                                <div class="col-sm-10">
                                    <span class="font-normal">@Html.Raw(Model.Detail)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
}