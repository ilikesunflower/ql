@model CMS.Areas.Admin.ViewModels.Personal.EditProfileViewModel

@{
    ViewData["Title"] = "Chỉnh sửa thông tin cá nhân | Thông tin cá nhân";
    string namePage = "Chỉnh sửa thông tin cá nhân";
}

<section class="content-header">
    <div class="container-fluid">
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card card-default">
            <form asp-area="Admin" asp-action="Edit">
                <div class="card-header">
                    <h3 class="card-title namePageText">@namePage</h3>
                    <div class="float-right">
                        <button type="submit" class="btn btn-success btn-sm "><i class="fa fa-file-text-o" aria-hidden="true"></i> &nbsp;Cập nhật &nbsp;</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card-body">
                            <div class="tab-content" id="custom-content-below-tabContent">
                                <div class="tab-pane fade show active" id="custom-content-below-home" role="tabpanel" aria-labelledby="custom-content-below-home-tab">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-8 col-lg-8 d-flex align-items-stretch flex-column">
                                            <div class="card card-default d-flex flex-fill">
                                                <div class="card-body">
                                                    <div class="form-horizontal">
                                                        <div class="form-group row m-t-10">
                                                            <label asp-for="UserName" class="col-sm-3 control-label">Tài khoản: <span class="text-danger">*</span></label>
                                                            <div class="col-sm-9">
                                                                <input asp-for="UserName" class="form-control  " autocomplete="off" readonly="readonly"/>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label asp-for="FullName" class="col-sm-3 control-label">Họ tên:<span class="text-danger">*</span></label>
                                                            <div class="col-sm-9">
                                                                <input asp-for="FullName" class="form-control  " autocomplete="off"/>
                                                                <span asp-validation-for="FullName" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label asp-for="Email" class="col-sm-3 control-label">Email:<span class="text-danger">*</span></label>
                                                            <div class="col-sm-9">
                                                                <input asp-for="Email" class="form-control  " autocomplete="off" readonly="readonly"/>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label asp-for="Sex" class="col-sm-3 control-label">Giới tính:</label>
                                                            <div class="col-sm-9">
                                                                <select class="form-control" asp-for="Sex">
                                                                    <option value="0">Chọn</option>
                                                                    <option value="1">Nam</option>
                                                                    <option value="2">Nữ</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label asp-for="PhoneNumber" class="col-sm-3 control-label">SĐT liên hệ:</label>
                                                            <div class="col-sm-9">
                                                                <input asp-for="PhoneNumber" class="form-control  " autocomplete="off"/>
                                                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-4 col-lg-4 d-flex align-items-stretch flex-column">
                                            <div class="card card-default d-flex flex-fill">
                                                <div class="card-body">
                                                    <div class="text-center">
                                                        <div class="m-b-sm" id="file" style="min-width: 250px; height: 250px">
                                                            @if (string.IsNullOrEmpty(Model.Image))
                                                            {
                                                                <img alt="image" class="img-circle" src="~/images/user-default.png" width="250" height="250">
                                                            }
                                                            else
                                                            {
                                                                <img alt="image" class="img-circle" src="@Html.Raw(Model.Image)" width="250" height="250">
                                                            }
                                                        </div>
                                                        <div class="m-t-10">
                                                            <input type="file" id="file-input" style="display: none;" accept="image/*"/>
                                                            @Html.HiddenFor(model => model.Image)
                                                            <button type="button" class="btn btn-primary btn-xs" id="btn-select-image">Chọn ảnh</button>
                                                            <button type="button" class="btn btn-success btn-xs ladda-button hidden" data-style="zoom-in" id="btn-upload-avartar"
                                                                    data-url="@Url.Action("UploadAvatar", "File")">Upload ảnh</button>
                                                            <button type="button" class="btn btn-danger btn-xs" id="btn-delete-avartar">Xóa ảnh</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Styles
{
    <link rel="stylesheet" href="~/lib/cropperjs/css/cropper.css">
}

@section Scripts
{
    <script src="~/lib/Ladda/spin.min.js" type="text/javascript"></script>
    <script src="~/lib/Ladda/ladda.min.js" type="text/javascript"></script>
    <script src="~/lib/Ladda/ladda.jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/cropperjs/js/cropper.js"></script>
    <script src="~/js/Admin/Personal/UploadAvatar.js" type="text/javascript" asp-append-version="true"></script>
    
}