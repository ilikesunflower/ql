@model CMS.Areas.Admin.ViewModels.ApplicationUser.CreatedUserViewModel

@{
    ViewData["Title"] = "Thêm mới tài khoản | Quản lý hệ thống";
    string namePage = "Thêm mới tài khoản";
    string subName1 = "Người dùng";
    string subName = "Quản trị hệ thống";
}

<section class="content-header">
    <div class="container-fluid subname">
        <div class="row">
            <div class="col-sm-6 ">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item">
                        <a>@subName</a>
                    </li>
                    <li class="breadcrumb-item active"><a class="active" asp-area="Admin" asp-action="Index">@subName1</a></li>

                </ol>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <form asp-area="Admin" asp-action="Create">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header ">
                            <p class="card-title namePageText">@namePage</p>
                            <div class="float-right">
                                @await Html.PartialAsync("Partial/BasicAction/Save")
                            </div>
                        </div>
                        <div class="card-body">
                            <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="custom-content-below-home-tab" data-toggle="pill" href="#custom-content-below-home" role="tab" aria-controls="custom-content-below-home" aria-selected="true">Thông tin chung</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="custom-content-below-profile-tab" data-toggle="pill" href="#custom-content-below-profile" role="tab" aria-controls="custom-content-below-profile" aria-selected="false">Phân quyền</a>
                                </li>

                            </ul>
                            <div class="tab-content" id="custom-content-below-tabContent">
                                <div class="tab-pane fade show active" id="custom-content-below-home" role="tabpanel" aria-labelledby="custom-content-below-home-tab">
                                    <div class="row" style=" margin: 20px 5px">
                                        <div class="col-xs-12 col-sm-8 col-lg-8" >
                                            <div class="form-horizontal">
                                                <div class="form-group row m-t-10">
                                                    <label asp-for="UserName" class="col-sm-3 control-label">Tài khoản: <span class="text-danger">*</span></label>
                                                    <div class="col-sm-9">
                                                        <input type="text" asp-for="UserName" class="form-control  " autocomplete="off" placeholder="Nhập tài khoản" />
                                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label asp-for="Password" class="col-sm-3 control-label">Mật khẩu: <span class="text-danger">*</span></label>
                                                    <div class="col-sm-9">
                                                        <input  asp-for="Password" class="form-control text-password" autocomplete="off" placeholder=""/>
                                                        <span style="font-size: 12px; font-style: italic; color: darkgray;">Mật khẩu tối thiểu 8 ký tự, chứa ít nhất 1 ký tự đặc biệt, 1 ký tự viết hoa, 1 ký tự viết thường, 1 ký tự số</span>
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label asp-for="ConfirmPassword" class="col-sm-3 control-label">Nhập lại mật khẩu: <span class="text-danger">*</span></label>
                                                    <div class="col-sm-9 control-label">
                                                        <input  asp-for="ConfirmPassword" class="form-control text-password" autocomplete="off" />
                                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label asp-for="FullName" class="col-sm-3 control-label">Họ tên :<span class="text-danger">*</span></label>
                                                    <div class="col-sm-9">
                                                        <input asp-for="FullName" class="form-control  " autocomplete="off" placeholder="Nhập họ tên" />
                                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label asp-for="IsActive" class="col-sm-3 control-label">Trạng thái :<span class="text-danger">*</span></label>
                                                    <div class="col-sm-9">
                                                        <select class="form-control select2 " asp-for="IsActive">
                                                            <option value="0">Chưa kích hoạt</option>
                                                            <option value="1">Kích hoạt</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label asp-for="Email" class="col-sm-3 control-label">Email :<span class="text-danger">*</span></label>
                                                    <div class="col-sm-9">
                                                        <input asp-for="Email" class="form-control  " autocomplete="off" placeholder="Nhập email" />
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label asp-for="PhoneNumber" class="col-sm-3 control-label">SĐT :</label>
                                                    <div class="col-sm-9">
                                                        <input asp-for="PhoneNumber" class="form-control  " autocomplete="off" placeholder="Nhập số điện thoại" />
                                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label asp-for="Sex" class="col-sm-3 control-label">Giới tính :</label>
                                                    <div class="col-sm-9">
                                                        <select class="form-control select2 " asp-for="Sex">
                                                            <option value="0">Chọn</option>
                                                            <option value="1">Nam</option>
                                                            <option value="2">Nữ</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-4 col-lg-4">
                                            <div class="text-center" style="margin:70px auto">
                                                <div class="m-b-sm" id="file" style="min-width: 200px; min-height: 200px">
                                                    @if (string.IsNullOrEmpty(Model.Image))
                                                    {
                                                        <img alt="image" class="img-circle" src="~/images/user-default.png" width="200" height="200">
                                                    }
                                                    else
                                                    {
                                                        <img alt="image" class="img-circle" src="@Html.Raw(Model.Image)" width="200" height="200">
                                                    }
                                                </div>
                                                <div class="m-t-10">
                                                    <input type="file" id="file-input" style="display: none;" accept="image/*" />
                                                    @Html.HiddenFor(model => model.Image)
                                                    <button type="button" class="btn btn-primary btn-xs ladda-button" data-style="zoom-in" id="btn-upload-avartar" data-url="@Url.Action("UploadAvatar", "File")">Upload ảnh</button>
                                                    <button type="button" class="btn btn-danger btn-xs" id="btn-delete-avartar">Xóa ảnh</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="tab-pane fade" id="custom-content-below-profile" role="tabpanel" aria-labelledby="custom-content-below-profile-tab" style="margin:5px;">
                                    <div class="row" style=" margin:20px 5px">
                                        <div class="col-sm-12 col-xs-12">
                                            <div class="table-responsive">
                                                <table class="table table-bordered" id="groupRole">
                                                    <thead>
                                                        <tr>
                                                            <th class="text-transform-capitalize">
                                                                <input type="checkbox" class="i-checks chkAll" />
                                                                Nhóm quyền
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @{
                                                            if (Model.ListRoles != null && Model.ListRoles.Count > 0)
                                                            {
                                                                for (int i = 0; i < Model.ListRoles.Count; i++)
                                                                {
                                                                    <tr>
                                                                        <td>
                                                                            <div class="checkbox icheck-success">
                                                                                <input type="checkbox" class="i-checks chkItem" asp-for="@Model.ListRoles[i].IsSelected" />
                                                                                <label class="control-label  f-w-500" asp-for="@Model.ListRoles[i].IsSelected">@Model.ListRoles[i].Name </label>
                                                                                <input type="hidden" asp-for="@Model.ListRoles[i].Id" />
                                                                                <input type="hidden" asp-for="@Model.ListRoles[i].Name" />
                                                                                <input type="hidden" asp-for="@Model.ListRoles[i]" />
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts
{
    <script src="~/lib/Ladda/spin.min.js" type="text/javascript"></script>
    <script src="~/lib/Ladda/ladda.min.js" type="text/javascript"></script>
    <script src="~/lib/Ladda/ladda.jquery.min.js" type="text/javascript"></script>
    <script>
            $('#groupRole').checkAll();
        </script>
    <script src="~/js/Admin/ApplicationUser/uploadAvatar.js" type="text/javascript" asp-append-version="true"></script>
}