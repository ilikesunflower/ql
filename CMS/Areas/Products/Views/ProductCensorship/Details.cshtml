<header>
<section id="header">
    <div id="tool-bar-preview" class="container-fluid bg-like-footer">
        <div class="row">
            <div class="col-12 col-md-2">
                <h4 class="h4 mb-0 text-white">Xem trước</h4>
            </div>
            <div class="col-12 col-md-10 text-right">
                @if (isCensorshipPrice && (product.Org1Status == ProductCensorshipConst.Pending.Status || product.Org1Status == null))
                {
                    <button id="ApprovedPrice" data-id="@product.Id" type="button" class="btn btn-sm mr-10px font-weight-bold btn-success radius-5">
                        Duyệt giá, mã SP
                    </button>
                }
                @if (isCensorshipPrice && product.Org1Status != ProductCensorshipConst.NotApproved.Status)
                {
                    <button data-toggle="modal" data-target="#NotApprovedPrice" type="button" class="btn mr-10px font-weight-bold btn-sm bg-red text-white radius-5">
                        Xem lại giá, mã SP
                    </button>
                    <div class="modal fade text-left" id="NotApprovedPrice" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <form asp-action="NotApprovedPrice" method="post">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Yêu cầu xem lại giá, mã SP</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <input type="hidden" name="productId" value="@product.Id"/>
                                            <input type="hidden" name="backUrl" value="@backUrl"/>
                                            <label for="exampleFormControlTextarea1">Nội dung yêu cầu<span class="text-danger">*</span></label>
                                            <textarea class="form-control" name="Comment" minlength="1" maxlength="250" required="required" id="exampleFormControlTextarea1" rows="3"></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                        <button type="submit" class="btn btn-danger">Gửi</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                }
                @if (isCensorshipContent && (product.Org2Status == ProductCensorshipConst.Pending.Status || product.Org2Status == null))
                {
                    <button id="ApprovedContent" data-id="@product.Id" type="button" class="btn mr-10px font-weight-bold  btn-sm btn-success radius-5">
                        Duyệt nội dung SP
                    </button>
                }
                @if (isCensorshipContent && product.Org2Status != ProductCensorshipConst.NotApproved.Status)
                {
                    <button type="button" class="btn btn-sm bg-red font-weight-bold mr-10px text-white radius-5" data-target="#NotApprovedContent" data-toggle="modal">
                        Xem lại nội dung SP
                    </button>
                    <div class="modal fade text-left" id="NotApprovedContent" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <form asp-action="NotApprovedContent" method="post">
