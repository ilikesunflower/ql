<main>
<section id="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="product-breadcrumbs">
                    <li class="product-breadcrumb">
                        <a href="#">Trang chủ</a>
                    </li>
                    <li class="product-breadcrumb">
                        <a href="#">Tất cả sản phẩm</a>
                    </li>
                    <li class="product-breadcrumb active">@product.Name</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section id="product-info">
    <div class="container">
        <div class="row">
            <div class="col-12 col-xl-6">
                <div class="product-preview-slide owl-carousel owl-theme">
                    <div class="product-image-item image-wrapper image-5-4 position-relative" data-dot="<button style='background-image: url(@product.Image);'></button>">
                        <img class="img-contain" src="@product.Image" alt=""/>
                    </div>
                    @if (images is {Count: > 0 })
                    {
                        @foreach (var image in images)
                        {
                            <div class="product-image-item image-wrapper image-5-4 position-relative" data-dot="<button style='background-image: url(@image.Link);'></button>">
                                <img class="img-contain" src="@image.Link" alt=""/>
                            </div>
                        }
                    }
                </div>
                <div class="product-preview-slide-dot">
                    <div class="product-preview-slide-owl-carousel-dot"></div>
                    @if (images.Count > 3)
                    {
                        <div class="more-than-4" data-toggle="product-image-preview" data-target="#product-image-preview">Xem thêm @(images.Count - 3) hình</div>
                    }
                </div>
            </div>
            <div class="col-12 col-xl-6">
                <div class="product-info">
                    <h1 class="product-title">@product.Name</h1>
                    <div class="product-feedback">
                        <div class="product-item-star-rating">
                            <span class="fa-solid fa-star"></span>
                            <span class="fa-solid fa-star"></span>
                            <span class="fa-solid fa-star"></span>
                            <span class="fa-solid fa-star"></span>
                            <span class="fa-solid fa-star"></span>
                        </div>
                        <span class="product-feedback-separation-vertical"></span>
                        <span class="product-feedback-text"><strong class="product-feedback-text-strong">0</strong>Đánh giá</span>
                        <span class="product-feedback-separation-vertical"></span>
                        <span class="product-feedback-text"><strong class="product-feedback-text-strong">0</strong>Đã bán</span>
                    </div>
                    <hr class="product-feedback-separation-horizontal"/>
                    <div class="price product-price">
                        @if (product.PriceSale != null && product.PriceSale != 0)
                        {
                            <span class="price-old">
                                @CmsFunction.NumberFormatShow(product.PriceSale) <u>đ</u>
                            </span>
                        }
                        @if (listS is {Count:>0})
                        {
                            <span class="price-new">
                                @CmsFunction.NumberFormatShow(listS[0].Price) <u>đ</u>
                            </span>
                        }
                    </div>
                    <p class="product-desc">@Html.Raw(product.Lead)</p>
                    <hr class="product-feedback-separation-horizontal"/>
                    <div class="product-form-order">
                        @if (listPro is {Count: > 0})
                        {
                            @foreach (var item2 in listPro)
                            {
                                <div class="product-variation">
                                    <label class="product-variation-title">@item2.Name</label>
                                    <div class="product-variation-items">
                                        @foreach (var item3 in item2.ListValueName)
                                        {
                                            <div class="product-variation-item">
                                                <input type="radio" id="@(item2.Name + item3)" name="@item2.Name" value="@item3">
                                                <label for="@(item2.Name + item3)">@item3</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        }
                        <div class="product-amount">
                            <label class="product-amount-title">Số lượng</label>
                            <div class="product-amount-group-contain">
                                <div class="w-193px">
                                    <div class="product-amount-group">
                                        <span class="product-amount-group-decrease">
                                            <i class="fa-solid fa-minus"></i>
                                        </span><input type="number" class="product-amount-group-input"/>
                                        <span class="product-amount-group-increase">
                                            <i class="fa-solid fa-plus"></i>
                                        </span>
                                    </div>
                                </div><span class="product-amount-group-quantity-in-stock">(Còn 12 sản phẩm)</span>
                            </div>
                        </div>
                        <div class="product-form-action">
                            <button class="btn btn-buy btn-outline-default"><i class="fa-solid fa-cart-shopping d-none d-md-inline-block"></i> Thêm vào giỏ hàng</button> <button class="btn btn-default">Mua ngay</button> <button class="btn btn-pre-order">Mua ngay</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="product-image-preview" class="product-image-preview-modal">
        <div class="product-image-preview-modal__header">
            <h2 class="product-image-preview-modal__title">@product.Name</h2>
            <a class="product-image-preview-modal__close" data-target="#product-image-preview">
                <i class="fa-solid fa-xmark"></i>
