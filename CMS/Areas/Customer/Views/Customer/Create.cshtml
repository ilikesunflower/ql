@using CMS.Areas.Customer.Const
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CMS.Areas.Customer.Models.Customer.CreateViewModel

@{
    ViewData["Title"] = "Thêm mới tài khoản khách hàng | Quản lý tài khoản khách hàng";
    string namePage = "Thêm mới tài khoản khách hàng";
    string subName1 = "Danh sách tài khoản khách hàng";
    string subName = "Quản lý tài khoản khách hàng";
}

<section class="content-header">
    <div class="container-fluid subname">
        <div class="row">
            <div class="col-sm-6 ">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item">
                        <a>@subName</a>
                    </li>
                    <li class="breadcrumb-item active"><a class="active" asp-area="Customer" asp-action="Index">@subName1</a></li>

                </ol>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form asp-area="Customer" asp-action="Create">
                    <div class="card">
                        <div class="card-header ">
                            <p class="card-title namePageText">@namePage</p>
                            <div class="float-right">
                                @await Html.PartialAsync("Partial/BasicAction/Save")
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-horizontal">
                                <div class="form-group row">
                                    <label class="col-sm-2 control-label">Tài khoản:<span class="text-danger">*</span></label>
                                    <div class="col-sm-10">
                                        <input asp-for="UserName" class="form-control"/>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 control-label">Họ và tên:<span class="text-danger">*</span></label>
                                    <div class="col-sm-10">
                                        <input asp-for="FullName" class="form-control "/>
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 control-label">Email:<span class="text-danger">*</span></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Email" class="form-control "/>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 control-label">SĐT:</label>
                                    <div class="col-sm-10">
                                        <input asp-for="Phone" class="form-control "/>
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 control-label">Đối tượng khách hàng:</label>
                                    <div class="col-sm-10">
                                         <select class="form-control select2 " style="width: 100%;"  asp-for="TypeGroup">
                                              @{
                                                  foreach (var item in CustomerTypeGroupConst.ListCustomerTypeGroupConst)
                                                     {
                                                        <option value="@item.Key">@item.Value</option>
                                                     }
                                              }
                                         </select>
                                        <span asp-validation-for="TypeGroup" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 col-xs-2">Bộ phận:</label>
                                    <div class="col-md-10 col-xs-10">
                                        <input asp-for="Org" class="form-control "/>
                                        <span asp-validation-for="Org" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 control-label">Ghi chú:</label>
                                    <div class="col-sm-10">
                                        <textarea asp-for="Detail" class="form-control"></textarea>
                                        <span asp-validation-for="Detail" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
}