@using CMS_EF.Models.Articles
@using CMS.Areas.Categories.Const
@using NPOI.SS.Formula.Functions
@model CMS.Areas.Coupons.Models.DataExportViewModel
@{
    ViewData["Title"] = "Nhập dữ liệu coupon | Quản lý nhập coupon";
    string namePage = "Nhập dữ liệu coupon từ file excel";
    string subName = "Quản lý nhập coupon";
    string subName1 = "Danh sách nhập coupon";
}

<section class="content-header">
    <div class="container-fluid subname">
        <div class="row">
            <div class="col-sm-6 ">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item">
                        <a>@subName</a>
                    </li>
                     <li class="breadcrumb-item active"><a class="active" asp-area="Coupons" asp-action="Index">@subName1</a></li>
                </ol>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header ">
                        <p class="card-title namePageText">@namePage</p>
                        <div class="float-right">
                            @await Html.PartialAsync("Partial/BasicAction/Export", new {text = "Tải file Excel mẫu", url = "/Templates/Excels/Coupon/mau-nhap-coupon_excel.xlsx"})
                        </div>
                    </div>
                    <div class="card-body">
                         <form asp-action="Import" class="form-upload" method="post" enctype="multipart/form-data">
                              <div class="form-upload-file">
                                   <input type="file" class="d-none" asp-for="File"/>
                                   <div class="form-upload-info-file">
                                        <div class="text-center ">
                                             <img alt="update file excel" src="images/icon/excelUpload.png" />
                                        </div>
                                        <div class="text-center">
                                             <p class="form-upload-file-name"></p>
                                        </div>
                                   </div>
                                   <div class="form-upload-select-file">
                                       <div class="text-center">
                                          <p class="form-upload-text">Chọn các file có đuôi .xlsx.<br/> Chọn file dữ liệu đúng cho file coupon!</p>
                                       </div>
                                       <div class="text-center">
                                           <a class="btn btn-default form-upload-choose">Chọn tệp</a>
                                       </div>
                                   </div>
                              </div>
                              <span asp-validation-for="File" class="text-danger"></span>
                                             <button type="submit" class="btn btn-danger m-t-15">Nhập từ file excel</button>
                         </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

@section Scripts
{
    <script type="text/javascript" src="~/lib/bootstrap-tagsinput/bootstrap-tagsinput.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap-toggle/js/bootstrap-toggle.min.js"></script>
    <script type="text/javascript" src="js/uploadFile.js"></script>
}

@section Styles
{  
    <link rel="stylesheet" href="~/lib/bootstrap-toggle/css/bootstrap-toggle.min.css"/>
    <link rel="stylesheet" href="css/uploadFile.css"/>

}